{
  "extends": "@grafana/tsconfig/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "isolatedModules": true
  },
  "exclude": ["dist/**/*"],
  "include": ["utils/**/*.ts*", "src/**/*.ts*"],
  "ts-node": {
    "compilerOptions": {
      "isolatedModules": false,
      "module": "commonjs"
    }
  }
}
